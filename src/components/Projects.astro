---
// ----------- components ----------- //
import ProjectItem from '@/components/ProjectItem.astro'
import DevIcon from '@icons/DevIcon.astro'

// ----------- types & constants ----------- //
import type { Project } from '@/types/types'
import ArticleHeader from './ArticleHeader.astro'

interface Props {
  title?: string
  projects: Project[]
}

const { projects, title } = Astro.props
---

<article class="flex flex-col gap-12">
  <ArticleHeader
    workIcon={DevIcon}
    title={title || 'Proyectos'}
    description="Algunos de mis trabajos y colaboraciones mÃ¡s recientes"
  />

  <ul class="flex flex-col gap-4">
    {
      projects.map(({ title, description, thumbnailUrl, tags, codeUrl, demoUrl }) => (
        <ProjectItem
          title={title}
          description={description}
          thumbnailUrl={thumbnailUrl}
          tags={tags}
          codeUrl={codeUrl}
          demoUrl={demoUrl}
        />
      ))
    }
  </ul>
</article>
