---
// ----------- icons ----------- //
import GmailIcon from '@icons/GmailIcon.astro';
import LinkedInIcon from '@icons/LinkedInIcon.astro';
import GitHubIcon from '@icons/GitHubIcon.astro';
import ArrowIcon from '@icons/ArrowIcon.astro';

// ----------- components ----------- //
import Pill from '@components/Pill.astro';
import Link from '@components/Link.astro';
import { Image } from 'astro:assets';
---

<article
  class="flex flex-col items-center lg:flex-row gap-6 lg:gap-4 justify-between w-full"
>
  <section
    class="flex flex-col items-center justify-center w-full min-h-48 h-auto m-0 gap-4 text-center lg:flex-row md:justify-normal lg:text-left md:w-5/6 rounded-lg"
  >
    <div class="min-w-48 min-h-48 flex overflow-hidden rounded-lg">
      <Image
        transition:name="hero"
        class="rounded-lgobject-center object-cover w-60 sm:w-48"
        src="https://i.postimg.cc/tCfzMX26/dibujo-avatar.webp"
        alt="Foto de Carlos Eduardo Hernández Munévar"
        height={300}
        width={300}
        loading="eager"
      />
    </div>
    <div class="flex flex-col h-full w-full gap-6 p-4">
      <h1 class="text-3xl font-bold">
        ¡Hola, soy <strong>Eduardo</strong>!
      </h1>
      <div class="flex flex-col gap-4 items-center lg:items-start">
        <p class="text-lg text-pretty">
          Mi nombre es Carlos Eduardo Hernández Munévar y soy un desarrollador <strong
            >full-stack junior y estudiante de Ingeniería Informática con
            experiencia profesional en JavaScript</strong
          >, enfocado en crear soluciones escalables y eficientes.
        </p>
        <Link href="/about" text="Más sobre mi">
          <ArrowIcon />
        </Link>
      </div>
    </div>
  </section>
  <ul
    class="flex flex-row lg:flex-col items-center justify-center gap-6 flex-wrap mx-4 md:mx-0"
  >
    <li>
      <Pill
        text="ceduardo.eh@gmail.com"
        href="mailto:ceduardo.eh@gmail.com"
        hasCopy
      >
        <GmailIcon />
      </Pill>
    </li>
    <li>
      <Pill
        text="LinkedIn"
        href="https://www.linkedin.com/in/eduardo-hernandez-munevar/"
      >
        <LinkedInIcon />
      </Pill>
    </li>
    <li>
      <Pill text="GitHub" href="https://github.com/CEhM-Hernandez">
        <GitHubIcon />
      </Pill>
    </li>
  </ul>
</article>
