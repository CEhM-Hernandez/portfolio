---
/* eslint-disable @typescript-eslint/no-explicit-any */

interface Props {
  workIcon: any
  title: string
  description: string
}

const { workIcon: WorkIcon, title, description } = Astro.props
---

<header class="flex items-center gap-3 sm:gap-4">
  <div
    class="flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-accent/10 rounded-xl border border-accent/20 backdrop-blur-sm"
  >
    <WorkIcon class="w-6 h-6 sm:w-7 sm:h-7 text-accent" />
  </div>
  <div class="flex flex-col gap-1">
    <h2 class="text-2xl sm:text-3xl font-bold text-accent text-balance leading-tight">
      {title}
    </h2>
    <p class="text-sm text-main/60 font-medium">{description}</p>
  </div>
</header>
