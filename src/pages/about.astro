---
// ------------ components ------------ //
import Layout from '@layouts/Layout.astro'
import Card from '@components/Card.astro'
import CardHeader from '@components/CardHeader.astro'
import SectionContainer from '@components/SectionContainer.astro'
import SkillCard from '@components/SkillCard.astro'
import { Image } from 'astro:assets'

// ------------ content ------------ //
import { BACKEND_SKILLS, FRONTEND_SKILLS, TOOLS_SKILLS } from '@utils/constants.ts'
import { Content as AboutContent, frontmatter } from '@/data/about.md'
---

<Layout
  title="Sobre CEhM - Desarrollador Full-Stack"
  description="Descubre más sobre Carlos Eduardo Hernández Munévar, desarrollador Full-Stack con experiencia en tecnologías modernas y una pasión por el aprendizaje."
>
  <div class="w-full flex flex-col sm:flex-row justify-center gap-8 text-center sm:text-left">
    <h1 class="text-2xl font-bold leading-tight text-balance sm:hidden">
      {frontmatter.title}
    </h1>
    <Image
      transition:name="hero"
      class="rounded-lg object-cover mx-auto md:mx-0 md:w-2/5 max-w-xs w-full"
      src={frontmatter.profileImage}
      alt="Foto de Carlos Eduardo Hernández Munévar"
      height={300}
      width={300}
      loading="eager"
    />
    <div class="w-full flex flex-col gap-6 items-center sm:items-start h-full">
      <h1 class="text-2xl md:text-3xl font-bold leading-tight text-balance hidden sm:block">
        {frontmatter.title}
      </h1>
      <div class="text-lg">
        <AboutContent />
      </div>
    </div>
  </div>
  <SectionContainer>
    <h2 class="text-4xl font-bold text-center">
      Habilidades <strong>&</strong> Conocimientos
    </h2>
    <div
      class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] justify-items-center gap-4 mt-8"
    >
      <Card className="w-full max-w-80 sm:max-w-none">
        <CardHeader className="text-center">Frontend</CardHeader>
        <SkillCard skills={FRONTEND_SKILLS} />
      </Card>
      <Card className="w-full max-w-80 sm:max-w-none">
        <CardHeader className="text-center">Backend</CardHeader>
        <SkillCard skills={BACKEND_SKILLS} />
      </Card>
      <Card className="w-full max-w-80 sm:max-w-none">
        <CardHeader className="text-center">Herramientas</CardHeader>
        <SkillCard skills={TOOLS_SKILLS} />
      </Card>
    </div>
  </SectionContainer>
</Layout>
