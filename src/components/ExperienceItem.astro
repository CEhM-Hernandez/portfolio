---
import ArrowIcon from '@/assets/icons/ArrowIcon.astro';

interface Props {
  title: string;
  date: string;
  enterprice: string;
  description: string;
  link?: string;
}

const { title, date, description, link, enterprice } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-accent rounded-full mt-8 -start-[7px] border border-main/20 dark:border-secondary"
>
</div>

<time class="mb-1 text-sm font-normal leading-none text-main/60">{date}</time>
<div class="flex gap-8 flex-col md:flex-row">
  <div class="w-full flex flex-col gap-4">
    <h3 class="text-lg font-bold text-accent w-full">
      {title}
    </h3>
    <p class="text-main/60 font-bold">{enterprice}</p>
  </div>

  <p class="mb-4 font-normal text-main/90">
    {description}
  </p>
</div>

{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 gap-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      Más información <ArrowIcon />
    </a>
  )
}
