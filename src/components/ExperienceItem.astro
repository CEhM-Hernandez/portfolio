---
// ----------- components ----------- //
import RedirectIcon from '@icons/RedirectIcon.astro';

// ----------- props ----------- //
import type { Enterprice } from '@/types/types';

interface Props {
  title: string;
  date: string;
  enterprice: Enterprice;
  description: string;
}

const { title, date, description, enterprice } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-accent rounded-full mt-8 -start-[7px] border border-main/20 dark:border-secondary"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-main/60">{date}</time>
<div class="flex gap-8 flex-col md:flex-row">
  <div class="flex flex-col gap-4">
    <h3 class="text-lg font-bold text-accent w-full text-balance">
      {title}
    </h3>
    {
      enterprice.link ? (
        <a
          href={enterprice.link}
          class="text-main/60 inline-flex justify-center items-center text-center align-middle gap-2 hover:text-accent w-fit transition duration-300 font-bold decoration-wavy hover:underline leading-5"
          rel="noopener noreferrer"
          target="_blank"
        >
          {enterprice.name}
          <RedirectIcon />
        </a>
      ) : (
        <p class="text-main/60 font-bold leading-5">{enterprice.name}</p>
      )
    }
  </div>
  <p class="mb-4 font-normal text-main/90 text-pretty w-full md:w-3/4">
    {description}
  </p>
</div>
